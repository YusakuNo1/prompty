{
	"name": "prompty",
	"displayName": "prompty",
	"description": "",
	"version": "1.20250316.73921",
	"engines": {
		"vscode": "^1.98.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/microsoft/prompty.git"
	},
	"preview": true,
	"categories": [
		"Azure",
		"Data Science",
		"Machine Learning"
	],
	"keywords": [
		"Prompt",
		"Prompt Engineering",
		"Azure OpenAI",
		"LLM",
		"LLMOps"
	],
	"activationEvents": [
		"onLanguage:plaintext"
	],
	"main": "./packages/core/out/extension",
	"contributes": {
		"configuration": {
			"title": "Prompty",
			"properties": {
				"promptyLanguageServer.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				},
				"prompty.currentModelConfiguration": {
					"type": "string",
					"description": "Current configuration",
					"default": "default"
				}
			}
		},
		"languages": [
			{
				"id": "prompty",
				"aliases": [
					"Prompty",
					"prompty"
				],
				"icon": {
					"light": "icons/prompty16x16.png",
					"dark": "icons/prompty16x16.png"
				},
				"extensions": [
					".prompty"
				]
			},
			{
				"id": "tracy",
				"aliases": [
					"tracy"
				],
				"icon": {
					"light": "icons/promptyTrace_light.svg",
					"dark": "icons/promptyTrace_dark.svg"
				},
				"extensions": [
					".tracy"
				]
			}
		],
		"grammars": [
			{
				"path": "./syntaxes/prompty.tmLanguage.json",
				"language": "prompty",
				"scopeName": "source.prompty",
				"embeddedLanguages": {
					"meta.embedded.block.yaml": "yaml",
					"meta.embedded.block.jinja": "jinja"
				}
			}
		],
		"activationEvents": [
			"onLanguage:prompty"
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile && cd ./packages/server && npm run bundle && cd ../..",
		"compile": "tsc -b && cd ./packages/server && npm run esbuild-base && cd ..",
		"watch": "tsc -b -w",
		"lint": "eslint",
		"generate-grammar": "js-yaml ./syntaxes/prompty.tmLanguage.yaml > ./syntaxes/prompty.tmLanguage.json",
		"postinstall": "cd ./packages/core && npm install && cd ../server && npm install && cd ..",
		"package": "vsce package --no-dependencies --allow-missing-repository",
		"esbuild-base": "esbuild ./packages/core/src/extension.ts --bundle --outfile=packages/core/out/extension.js --external:vscode --format=cjs --platform=node",
		"package-pre": "vsce package --no-dependencies --allow-missing-repository --pre-release"
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/mocha": "^10.0.6",
		"@types/node": "^20",
		"@vscode/vsce": "^3.2.2",
		"eslint": "^9.13.0",
		"js-yaml": "^4.1.0",
		"mocha": "^10.3.0",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.26.0"
	}
}
